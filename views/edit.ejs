<% include partials/header %>

<div class="ui main container segment">
    <div class="ui huge header">
        
    <h1>Edit - <%= blog.title %></h1>

    <form action="/blogs/<%= blog._id%>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label for="title">Title:</label>
            <input type="text" name="blog[title]" placeholder="Title Goes Here" value="<%= blog.title%>">
        </div>

         <div class="field">
            <label for="image">Image:</label>
            <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image%>">
        </div>

        <div class="field">
            <label for="body">Blog Content:</label>
            <textarea  name="blog[body]" placeholder="Blog Post Goes Here"><%= blog.body%></textarea>
        </div>
    
        <input type="submit"  class="ui black basic button">
    </form>
    </div>
</div>



<% include partials/footer %>